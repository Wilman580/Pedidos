<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.Vistas.VistaBienvenida"
             BindingContext="{Binding LocalizadorPrincipal, Source={StaticResource Localizador}}"
             BackgroundColor="{StaticResource AccentColor1}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Bienvenid@s"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   FontSize="20"/>
            <Button Text="Iniciar" TextColor="{StaticResource AccentColor2}" BackgroundColor="{StaticResource MainColor}"
                    Command="{Binding ComandoEmpezar}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>